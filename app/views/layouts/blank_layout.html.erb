<!DOCTYPE html>
<html>
  <head>
    <title>SoftdevIMgtTafc</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
        <% unless flash.empty? %>
          <script type="text/javascript">
              <% flash.each do |f| %>
              <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
              toastr['<%= type %>']('<%= f[1] %>');
              <% end %>
          </script>
        <% end %>

    <%= yield %>

  </body>

  <%= javascript_include_tag 'datatables', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'datatables-bootstrap', 'data-turbolinks-track' => true %>
</html>
