<h1>Reports#transactions_report</h1>
<p>Find me in app/views/reports/transactions_report.html.erb</p>

<table id="reports-datatable" class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Billing #</th>
      <th>Client</th>
      <th>Employee</th>
      <th>Payments</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td>
          #<%= transaction.billing_num %>
        </td>
        <td>
          <%= transaction.client.company_name %>
        </td>
        <td>
          <%= transaction.employee %>
        </td>
        <td>
          <% transaction.provisional_receipts do |payment| %>
            <ul>
              <li>
                Php <%= number_with_precision(payment.amount_paid, :precision => 2, :delimiter => ',') %>
              </li>
            </ul>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
