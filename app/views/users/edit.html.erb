<h1> Edit Employee  </h1>
<hr>
<%= form_for @user, url: {action: 'update'} do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <%= render partial: "shared/error_messages", locals: {form_model: @user} %>
</div>
<% end %>
  <div class="col-sm-5 col-md-8" id="panel">
<div class="form-group">
  <%= f.label :first_name, class:"control-label", for:"inputFirstName" %>
  <%= f.text_field :first_name, class: "form-control", type: "text", pattern: "^[A-Za-z ]+$", required: "required", id:"inputFirstName", placeholder: "First Name goes here..."  %>
</div>
<div class="form-group">
  <%= f.label :last_name, class:"control-label", for:"inputLastName" %>
  <%= f.text_field :last_name, class: "form-control", type: "text", pattern: "^[A-Za-z ]+$", required: "required", id:"inputLastName", placeholder: "Last Name goes here..." %>
</div>
<div class="form-group">
  <%= f.label :email, class:"control-label", for:"inputEmail" %>
  <%= f.text_field :email, class: "form-control", type: "email", required: "required", id:"inputEmail", placeholder: "sample@gmail.com, example@yahoo.com" %>
</div>

  <% if can? :manage, User %>
    <h5>Role:</h5>
  <%= f.radio_button :role, 'owner', :checked => (@user.role == 'owner' ? true : false), class: "radio-inline" %>
  <%= label :role, 'owner' %>
    <br>
  <%= f.radio_button :role, 'manager', :checked => (@user.role == 'manager' ? true : false), class: "radio-inline" %>
  <%= label :role, 'manager' %>
    <br>
  <%= f.radio_button :role, 'employee',:checked => (@user.role == 'employee' ? true : false), class: "radio-inline" %>
  <%= label :role, 'employee' %>
  <% end %>

  </div>
<div class="actions col-md-6 pull-right">
  <%= f.submit "Update User", class: "btn btn-primary btn-md btn-block" %>
</div>
<% end %>
