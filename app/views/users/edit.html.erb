<%= form_for @user, url: {action: 'update'} do |f| %>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <%= render "shared/error_messages", locals: {form_model: @user} %>
  </div>
<% end %>
<div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-control", pattern: "^[A-Za-z ]+$", required: "required" %>
</div>
<div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "form-control", pattern: "^[A-Za-z ]+$", required: "required" %>
</div>
<div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control", required: "required", placeholder: "example@gmail.com" %>
</div>
<div class="form-group">
    <% if can? :manage, User %>
    <%= f.label :role %>
    <%= f.radio_button :role, 'owner', :checked => (@user.role == 'owner' ? true : false), class: "radio-inline" %>
    <%= label :role, 'owner' %>
    <%= f.radio_button :role, 'manager', :checked => (@user.role == 'manager' ? true : false), class: "radio-inline" %>
    <%= label :role, 'manager' %>
    <%= f.radio_button :role, 'employee', :checked => (@user.role == 'employee' ? true : false), class: "radio-inline" %>
    <%= label :role, 'employee' %>
    <% end %>
</div>
<div class="actions col-md-6 pull-right">
    <%= f.submit "Update User", class: "btn btn-primary btn-md btn-block" %>
</div>
<% end %>
